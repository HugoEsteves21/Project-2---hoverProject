<link rel="stylesheet" href="/stylesheets/create.css" />

<div class="padding create-pages">
  <form action="/beers/create" method="POST" enctype="multipart/form-data">
    
    <div>
      <label for="">Name:</label>
      <input type="text" name="name" id="" value="{{beer.name}}" />
    </div>

    {{! adding the picture of the beer }}
    <div>
      <label for="imageUrl">Image:
        <input type="file" name="imageUrl" value="{{beer.imageUrl}}" />
      </label>
    </div>

    <div>
      <label for="style">Style:</label>
      <input type="text" name="style" id="style" value="{{beer.style}}" />
    </div>

    <div>
      <label for="brewery">Brewery:</label>
      <input type="text" name="brewery" id="brewery" value="{{beer.brewery}}" />
    </div>

    <div>
      <label for="brand">Brand:</label>
      <input type="text" name="brand" id="brand" value="{{beer.brand}}" />
    </div>

    <div>
      <label for="quantity">Quantity:</label>
      <input type="text" name="quantity" id="quantity" value="{{beer.quantity}}"/>
    </div>

    <label for="abv">ABV:</label>
    <input type="text" name="abv" id="abv" value="{{beer.abv}}" />
    <label for="description">Description:</label>
    <textarea
      name="description"
      id="description"
      cols="30"
      rows="10"
    ></textarea>

    {{! array of restaurants in the database }}
    {{!-- <label for="">Bar:</label> --}}
    <select name="restaurantId">
      {{#each restaurants}}
        <option  class='restaurants' value="{{_id}}">{{name}}</option>
      {{/each}}
    </select>

    <button type="submit">Add your special beer</button>
  </form>
</div>