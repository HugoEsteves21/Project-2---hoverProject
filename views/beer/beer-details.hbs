  <h1>Discover more about this Beer</h1>


  <form action="/beers/details/{{beer._id}}" method="post">
  
    <label for="restaurantId">Select Restaurant:</label>
    
    <select name="restaurantId">

      {{#each allRestaurants}}
        <option  class='restaurants' value="{{_id}}">{{name}}</option>
      {{/each}}

    </select>

    <button type="submit">Add to Restaurant</button>
  </form>

  
<div class="container">
  <div class="cards">
    <div class="card-item">
      <div class="card-image">
       
          <img src="{{beer.imageUrl}}" alt="image of {{beer.name}} beer" />

      </div>
          <div class="card-info">
          
            <h3 class="card-title">{{beer.name}}</h3>
            <p>Style: {{beer.style}}</p>
            <p>Brewery: {{beer.brewery}}</p>
            <p>Descripton: {{beer.description}}</p>
            <p>Quantity: {{beer.quantity}}</p>
            <p>ABV: {{beer.abv}}</p>
            <p>By: {{beer.brand}}</p>

            <div>
              <h5>Where to drink me:</h5>
              <ul>
                {{#each user.restaurantId}}
                  <li>{{name}}</li>
                {{/each}}
              </ul>
            </div>


   

      {{#if isFav}}
        <form action="/beers/removeFavs/{{beer._id}}" method="post">
          <button type="submit">Remove from my favourite Beers</button>
        </form>
      {{else}}
        <form action="/beers/addFavs/{{beer._id}}" method="post">
          <button type="submit">Add to my favourite Beer</button>
        </form>
      {{/if}}
     
         

          
          </div>
      
      
    
    </div>
  </div>
</div>